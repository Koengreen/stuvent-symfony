{% extends 'base.html.twig' %}

{% block title %}Evenementinfo{% endblock %}


{% block body %}
<div class="about" xmlns="http://www.w3.org/1999/html">
    <div class="about-text">
        <br>
        <h1> {{ evt.title }}</h1>
        <hr>
        <img class="event-img img-fluid" src="/{{ evt.image }}">
        <br>
        <br><br>

        <h1>Over het evenement</h1> <br>
        <h1>Bedrijf:</h1><br>
        <h3>{{ evt.company }}</h3>
        <hr>
        <h1>Beschrijving:</h1>
        <p>{{ evt.description }}</p>
        <hr>
        <h1>Datum:</h1>
        <h3>{{ evt.date|date('d M H:i') }}</h3>
        <h3>{{ evt.enddate|date('d M H:i') }}</h3>
        <hr>
        <h1>Level:</h1>
        <h3>{{ evt.niveau }}</h3>
        <hr>
        <h1>Opleiding:</h1><br>
        <h3>{{ evt.opleiding }}</h3>
        <hr>

        <h1>Begeleider:</h1>

        <h3>{{ evt.concomitance }}</h3>
        <hr>
        <h1>Inschrijven:</h1>
        <br>

        {% if is_granted('ROLE_USER') %}
            <a class="pastevents" href="/enroll/{{ evt.id }}">Klik hier om je in te schrijven</a>
        {% else %}
            <button class="pastevents" onclick="window.location.href = '{{ path("app_login") }}'">Log eerst in als
                student
            </button>
        {% endif %}
        <hr>
        <h1>Mededelingen:</h1>
        {% for mededeling in evt.Mededelings %}
            <div style="background-color: white; border:2px solid black" class="mededeling">
                <br>
            <h3 style="text-decoration: underline">{{ mededeling.date|date('d m Y h:s')  }} {{ mededeling.title }}</h3>
            <p>{{ mededeling.text }}</p>
            </div>
        {% endfor %}
        <hr>




        {% endblock %}
        {% block footer %}
{% endblock %}