    </table>
    <br>
    <button onclick="totalsum()">bereken</button> <h1 id="result">.</h1>
  </div>
  </div>


</div>
  {% block javascripts %}
    <script src={{ asset('js/script.js') }} ></script>

    {{ encore_entry_script_tags('app') }}
  {% endblock %}
{% endblock %}
