            <img class="profile_img" src="https://source.unsplash.com/250x250/?profile" alt="student profile-picture">
            <br>
            <br>
            <h3>{{app.user.firstName}} {{app.user.lastName}} </h3>
          </div>
          <div class="card-body">
            <p class="mb-0"><strong class="pr-1">
              </strong>{{ app.user.studentNumber }}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-header bg-transparent border-0">
            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Algemene Informatie </h3>
          </div>
          <div class="card-body pt-0">
            <table class="table table-bordered">
              <tr>
                <th width="30%">Klas</th>
                <td width="2%"></td>
                <td>2B</td>
              </tr>
              <tr>
              </tr>
              <tr>
                <th width="30%">Telefoonnummer</th>
                <td width="2%"></td>
                <td>06+++++++</td>
              </tr>
              <tr>
                <th width="30%">Opleiding</th>
                <td width="2%"></td>
                <td>Leisure</td>
              </tr>
              <tr>
                <th width="30%">Email</th>
                <td width="2%"></td>
                <td>{{ app.user.email }}</td>
              </tr>
            </table>
          </div>
        </div>
          <div style="height: 26px"></div>
        <div class="card shadow-sm">
          <div class="card-header bg-transparent border-0">
            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Other Information</h3>
          </div>
          <div class="card-body pt-0">
              <p>Lorem
