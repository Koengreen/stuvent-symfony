{% extends 'base.html.twig' %}

{% block title %}Studenten informatie {% endblock %}

{% block body %}
<div class="about-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-transparent text-center">
                        <img class="profile_img" src="/{{ profile.image }}" alt="student profile-picture">
                        <br>
                        <br>
                        <h3>{{ profile.firstName }} {{ profile.lastName }} </h3>
                    </div>
                    <div class="card-body">
                        <p class="mb-0"><strong class="pr-1">
                            </strong>{{ profile.studentNumber }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Algemene Informatie </h3>
                    </div>
                    <div class="card-body pt-0">
                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">Klas</th>
                                <td width="2%"></td>
                            <td>
                                {% if profile.klas is not null %}
                                {{ profile.klas.naam }}
                                {% else %}
                                    Selecteer een klas
                                {% endif %}


                            </td>
                            </tr>
                            <tr>
                            </tr>
                            <tr>
                                <th width="30%">Telefoonnummer</th>
                                <td width="2%"></td>
                                <td>{{ profile.telefoonnummer }}</td>
                            </tr>
                            <tr>
                                <th width="30%">Opleiding</th>
                                <td width="2%"></td>
                                <td>{{ profile.opleiding }}</td>
                            </tr>
                            <tr>
                                <th width="30%">Email</th>
                                <td width="2%"></td>
                                <td>{{ profile.email }}</td>
                            </tr>

                            <tr>
                                <th width="30%">Wachtwoord</th>
                                <td width="2%"></td>
                                <td>
                                    <button class="buttondiv2"><a class="editprofile"
                                                                  href="/change-mypassword/{{ profile.id }}">
                                            Aanpassen</a></button>
                                </td>
                            </tr>
                            <tr>
                                <th width="30%"></th>
                                <td width="2%"></td>
                                <td>
                                    <button class="buttondiv1"><a class="editprofile"
                                                                  href="/editprofile/{{ profile.id }}">
                                            Gegevens aanpassen</a></button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <br>
                <br>

                <h1>Inschrijvingen :</h1>
                <table id="eventtable" class='event-table' style="width:100%">

                    <tr class="myprofile">
                        <th class="enrollTableHeader">Naam</th>
                        <th class="enrollTableHeader">Bedrijf</th>
                        <th class="enrollTableHeader">Startdatum</th>
                        <th class="enrollTableHeader">Einddatum</th>
                        <th class="enrollTableHeader">Uren</th>
                        <th class="enrollTableHeader">Aanwezigheid</th>
                        <th class="enrollTableHeader">Beoordeling</th>
                        <th class="enrollTableHeader">Meer info</th>
                    </tr>

                    {% for events in evt %}

                        <tr>
                            <td>{{ events.event.title }}</td>
                            <td>{{ events.event.company }}</td>
                            <td>{{ events.event.date|date('d M H:i') }}</td>
                            <td>{{ events.event.enddate|date('d M H:i') }}</td>
                            <td>{{ events.event.aantaluur }}</td>
                            {% if events.presence == false %}
                                <td> <a style="color: black" href="{{ path('edit_userevents_presence', {'id': events.id}) }}">Afwezig </a></td>
                            {% else %}
                                <td> <a style="color: black" href="{{ path('edit_userevents_presence', {'id': events.id}) }}">Aanwezig </a></td>
                            {% endif %}
                            <td> <a style="color: black" href="{{ path('edit_userevents_rating', {'id': events.id}) }}">{{ events.rating }} </a></td>
                            <td id=""><a class="moreinfolinks" href="/{{ events.event.id }}">info</a></td>
                        </tr>


                    {% endfor %}

                    <tr>

                    </tr>
                </table>
                <br>

                <script>

                    function ExportToExcel(type, fn, dl) {
                        var elt = document.getElementById('eventtable');
                        var wb = XLSX.utils.table_to_book(elt, {sheet: "sheet1"});
                        return dl ?
                            XLSX.write(wb, {bookType: type, bookSST: true, type: 'base64'}) :
                            XLSX.writeFile(wb, fn || ('urenoverzicht.' + (type || 'xlsx')));
                    }

                </script>
                <button class="buttondiv1" onclick="ExportToExcel('xlsx')">Exporteren naar excel</button>
                <br>

                <br>
                <h1 id="result">Aantal uur: {{ totalWorkHours }}</h1>
            </div>
        </div>


    </div>
    {% block javascripts %}
        <script src={{ asset('js/script.js') }}></script>

        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    {% endblock %}