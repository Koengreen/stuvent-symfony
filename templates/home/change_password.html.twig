{% extends 'base.html.twig' %}

{% block title %}Wachtwoord aanpassen{% endblock %}

{% block body %}
    <div class="about-text">
        <h2>Wachtwoord veranderen</h2>
        <hr>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                        {% if error is defined %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if success is defined %}
                            <div class="alert alert-success">{{ success }}</div>
                        {% endif %}

                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.password, 'Nieuw Wachtwoord') }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password, 'Nieuw Wachtwoord Bevestigen') }}
                            {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
                        </div>
                <br>
                <br>
                        <button type="submit" class="buttondiv2">Opslaan</button>
                        {{ form_end(form) }}

            </div>
        </div>
    </div>
    </div>
{% endblock %}
