{% extends 'base.html.twig' %}

{% block title %}Stuvent{% endblock %}


{% block body %}
    <div class="about-text" >
    <h2>Aanwezigheid</h2>
        <hr>

        {% for event, userEventsByEvent in userEvents %}
    <button class="accordion"> {{ userEventsByEvent.event.title }}</button>

    <div class="panel">
        <table>
            <thead>
            <tr>

                <th class="enrollTableHeader">Studentnummer</th>
                <th class="enrollTableHeader">Naam</th>
                <th class="enrollTableHeader">Opleiding</th>
                <th class="enrollTableHeader">Presentie</th>

            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ userEventsByEvent.user.studentnumber }}</td>
                    <td>{{ userEventsByEvent.user.lastName }} , {{ userEventsByEvent.user.firstName }}</td>

                    <td{{ userEventsByEvent.user.lastName }} </td>
                    <td>{{ userEventsByEvent.user.opleiding.name }}</td>
                    <td>

                        <form method="POST" action="{{ path('present', {'id': userEventsByEvent.id}) }}">
                            <input type="hidden" name="id" value="{{ userEventsByEvent.id }}">
                            <button class="buttondiv1 decide" type="submit">Ja</button>
                        </form>
                        <form method="POST" action="{{ path('absent', {'id': userEventsByEvent.id}) }}">
                            <input type="hidden" name="id" value="{{ userEventsByEvent.id }}">
                            <button class="buttondiv2 decide" type="submit">Nee</button>
                        </form>
                    </td>


                </tr>
            </tbody>
        </table>

    </div>
{% endfor %}
    </div>
    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function() {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }
    </script>


{% endblock %}